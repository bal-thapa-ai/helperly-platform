# ============================================
# Helperly Backend Configuration
# ============================================

APP_NAME=Helperly API
ENV=local
LOG_LEVEL=INFO
DEBUG=false

# Authentication (MVP - API Key)
API_KEY=dev-api-key-12345

# Database (Supabase Postgres + pgvector)
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/helperly
# DATABASE_URL=postgresql+asyncpg://<USER>:<PASSWORD>@127.0.0.1:5432/<DB>
DATABASE_URL=postgresql+asyncpg://helperly:helperly_dev_pw@127.0.0.1:5433/helperly
DB_ECHO=false

# Vector Search Configuration
VECTOR_MIN_SCORE_DEFAULT=0.7
VECTOR_TOP_K_DEFAULT=5

# Upload Configuration
UPLOAD_MAX_MB=7

# SaaS Plan Enforcement
REQUIRE_ALLOWED_DOMAINS_PRO=true

# OpenAI Configuration (Optional - leave empty for dev mode)
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
